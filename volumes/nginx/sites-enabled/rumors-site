server {
  listen 80 default_server;
  listen [::]:80 default_server;

  server_name rumors.hacktabl.org rumors.g0v.tw;

  location ~* {
    proxy_pass http://site:3000;
  }

  location ~* \.(?:jpg|jpeg|gif|png|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc)$ {
    expires 1M;
    add_header Cache-Control "public";
  }

  location ~* \.(?:css|js)$ {
    expires 1y;
    add_header Cache-Control "public";
  }
}
